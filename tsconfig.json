{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "jsx": "react",
    "target": "es5",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "_build"
  ],
  "compileOnSave": false,
  "atom": {
    "formatOnSave": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "convertTabsToSpaces": true
  }
}
